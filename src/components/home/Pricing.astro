---
import { Check, Sparkles } from '@lucide/astro';
import Button from '../ui/Button.astro';
import type { PricingTier } from '../../lib/keystatic';

// Accept props or fall back to importing from data file
interface Props {
  pricingTiers?: PricingTier[];
}

const { pricingTiers: propsTiers } = Astro.props;

// Use props if provided, otherwise import from data file (backward compatibility)
let pricingTiers: PricingTier[];
if (propsTiers && propsTiers.length > 0) {
  pricingTiers = propsTiers.sort((a, b) => a.priceAnnual - b.priceAnnual);
} else {
  const { pricingTiers: dataTiers } = await import('../../data/pricing');
  pricingTiers = dataTiers;
}
---

<section class="py-20 sm:py-32 relative overflow-hidden" id="pricing">
  <!-- Background -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-sky-500/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-[400px] h-[400px] bg-indigo-500/5 rounded-full blur-3xl"></div>
  </div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center animate-on-scroll">
      <span class="inline-block text-sm font-semibold text-sky-400 uppercase tracking-wider mb-4">
        Pricing
      </span>
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-5xl">
        Simple, <span class="gradient-text-blue">honest</span> pricing
      </h2>
      <p class="mt-4 text-lg text-slate-400 max-w-2xl mx-auto">
        No hidden fees. No surprises. Pay once, own forever option available.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="mt-16 grid gap-8 lg:grid-cols-3 stagger-children">
      {pricingTiers.map((tier) => {
        const { priceAnnual, pricePerpetual } = tier;

        return (
          <div
            class={`relative rounded-2xl p-8 transition-all duration-300 hover-lift ${
              tier.highlighted
                ? 'border-2 border-sky-500 bg-gradient-to-b from-sky-500/10 to-transparent'
                : 'border border-slate-800 bg-[#0e2655]/30 glass-card'
            }`}
          >
            {/* Popular badge */}
            {tier.highlighted && (
              <div class="absolute -top-4 left-1/2 -translate-x-1/2">
                <span class="inline-flex items-center gap-1.5 rounded-full bg-sky-500 px-4 py-1.5 text-sm font-semibold text-white shadow-lg shadow-sky-500/30">
                  <Sparkles class="h-4 w-4" />
                  Most Popular
                </span>
              </div>
            )}

            <div class="text-center">
              <h3 class="text-xl font-semibold text-white">{tier.name}</h3>
              <p class="mt-2 text-sm text-slate-400">{tier.description}</p>

              <div class="mt-6">
                {priceAnnual === 0 ? (
                  <div>
                    <span class="text-5xl font-bold text-white">$0</span>
                    <span class="text-slate-400 ml-2">/forever</span>
                  </div>
                ) : (
                  <div>
                    <span class="text-5xl font-bold text-white">${priceAnnual}</span>
                    <span class="text-slate-400 ml-2">/year</span>
                    {pricePerpetual && (
                      <div class="mt-2 text-sm text-slate-500">
                        or <span class="text-white font-medium">${pricePerpetual}</span> perpetual license
                      </div>
                    )}
                  </div>
                )}
              </div>
            </div>

            <ul class="mt-8 space-y-4">
              {tier.features.map((feature: string) => (
                <li class="flex items-start gap-3">
                  <div class={`flex h-6 w-6 shrink-0 items-center justify-center rounded-full ${tier.highlighted ? 'bg-sky-500/20' : 'bg-slate-800'}`}>
                    <Check class={`h-4 w-4 ${tier.highlighted ? 'text-sky-400' : 'text-slate-400'}`} />
                  </div>
                  <span class="text-sm text-slate-300">{feature}</span>
                </li>
              ))}
            </ul>

            <div class="mt-8">
              <Button
                href={tier.ctaLink}
                variant={tier.highlighted ? 'primary' : 'secondary'}
                class={`w-full ${tier.highlighted ? 'glow-blue' : ''}`}
              >
                {tier.cta}
              </Button>
            </div>
          </div>
        );
      })}
    </div>

    <!-- Compare Link -->
    <div class="mt-16 text-center animate-on-scroll">
      <div class="inline-flex flex-col sm:flex-row items-center gap-4 p-4 rounded-xl bg-[#0e2655]/30 border border-slate-800">
        <p class="text-slate-400">Need more details?</p>
        <a href="/pricing" class="inline-flex items-center gap-2 text-sky-400 hover:text-sky-300 font-medium transition-colors">
          Compare all features
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  // Initialize scroll animations
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.animate-on-scroll, .stagger-children').forEach(el => {
      observer.observe(el);
    });
  });
</script>
