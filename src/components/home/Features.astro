---
import { Search, Bot, Shield, FileText, Gauge, Globe, BarChart3, Layers } from '@lucide/astro';

const features = [
  {
    title: '100+ SEO Checks',
    description: 'Technical, content, and performance audits in one tool. Find issues before search engines do.',
    Icon: Search,
    color: 'sky',
  },
  {
    title: 'AI Search Ready',
    description: 'Audit for GPTBot, Claude-Bot, Google-Extended, and llms.txt compatibility.',
    Icon: Bot,
    color: 'violet',
  },
  {
    title: 'Privacy First',
    description: 'All data stays on your machine. No uploads, no tracking, no compliance risks.',
    Icon: Shield,
    color: 'emerald',
  },
  {
    title: 'White-Label Reports',
    description: 'Custom branded PDF reports with your logo and colors. Perfect for agencies.',
    Icon: FileText,
    color: 'amber',
  },
  {
    title: 'Lightning Fast',
    description: 'Parallel crawling with configurable threads. Audit thousands of pages in minutes.',
    Icon: Gauge,
    color: 'rose',
  },
  {
    title: 'JavaScript Rendering',
    description: 'Full JavaScript rendering support. See what search engines actually see.',
    Icon: Globe,
    color: 'cyan',
  },
  {
    title: 'Custom Extraction',
    description: 'Extract any data with CSS selectors or XPath. Build custom reports.',
    Icon: BarChart3,
    color: 'orange',
  },
  {
    title: 'Scheduled Crawls',
    description: 'Set it and forget it. Schedule recurring crawls to track SEO health over time.',
    Icon: Layers,
    color: 'indigo',
  },
];

const colorClasses = {
  sky: { bg: 'bg-sky-500/10', text: 'text-sky-400', border: 'group-hover:border-sky-500/30' },
  violet: { bg: 'bg-violet-500/10', text: 'text-violet-400', border: 'group-hover:border-violet-500/30' },
  emerald: { bg: 'bg-emerald-500/10', text: 'text-emerald-400', border: 'group-hover:border-emerald-500/30' },
  amber: { bg: 'bg-amber-500/10', text: 'text-amber-400', border: 'group-hover:border-amber-500/30' },
  rose: { bg: 'bg-rose-500/10', text: 'text-rose-400', border: 'group-hover:border-rose-500/30' },
  cyan: { bg: 'bg-cyan-500/10', text: 'text-cyan-400', border: 'group-hover:border-cyan-500/30' },
  orange: { bg: 'bg-orange-500/10', text: 'text-orange-400', border: 'group-hover:border-orange-500/30' },
  indigo: { bg: 'bg-indigo-500/10', text: 'text-indigo-400', border: 'group-hover:border-indigo-500/30' },
};
---

<section class="py-20 sm:py-32 relative overflow-hidden" id="features">
  <!-- Background accent -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-sky-500/5 rounded-full blur-3xl"></div>
  </div>

  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center animate-on-scroll">
      <span class="inline-block text-sm font-semibold text-sky-400 uppercase tracking-wider mb-4">
        Features
      </span>
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-5xl">
        Everything you need for
        <span class="gradient-text-blue">SEO audits</span>
      </h2>
      <p class="mt-4 text-lg text-slate-400 max-w-2xl mx-auto">
        Professional-grade features without the enterprise price tag.
        Built for agencies, freelancers, and in-house teams.
      </p>
    </div>

    <!-- Feature Cards - Bento Grid Style -->
    <div class="mt-16 grid gap-4 sm:grid-cols-2 lg:grid-cols-4 stagger-children">
      {features.map(({ title, description, Icon, color }, index) => {
        const colors = colorClasses[color as keyof typeof colorClasses];
        const isLarge = index === 0 || index === 5;

        return (
          <div
            class={`group relative rounded-2xl border border-slate-800 bg-[#0e2655]/30 p-6 transition-all duration-300 hover-lift glass-card ${colors.border} ${isLarge ? 'sm:col-span-2 lg:col-span-2' : ''}`}
          >
            {/* Icon */}
            <div class={`flex h-12 w-12 items-center justify-center rounded-xl ${colors.bg} ${colors.text} mb-4 transition-transform group-hover:scale-110`}>
              <Icon class="h-6 w-6" />
            </div>

            {/* Content */}
            <h3 class="text-lg font-semibold text-white mb-2">{title}</h3>
            <p class="text-sm text-slate-400 leading-relaxed">{description}</p>

            {/* Hover glow effect */}
            <div class={`absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10 ${colors.bg} blur-xl`}></div>
          </div>
        );
      })}
    </div>

    <!-- Bottom CTA -->
    <div class="mt-16 text-center animate-on-scroll">
      <a href="/features" class="inline-flex items-center gap-2 text-sky-400 hover:text-sky-300 font-medium transition-colors">
        Explore all features
        <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  // Initialize scroll animations
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.animate-on-scroll, .stagger-children').forEach(el => {
      observer.observe(el);
    });
  });
</script>
