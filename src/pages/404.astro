---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { Home, Search, BookOpen, HelpCircle, ArrowLeft, Download } from '@lucide/astro';

// Popular pages to help users navigate
const helpfulLinks = [
  { name: 'Homepage', href: '/', icon: Home, description: 'Back to the main page' },
  { name: 'Features', href: '/features', icon: Search, description: 'Explore 97+ SEO checks' },
  { name: 'Documentation', href: '/docs', icon: BookOpen, description: 'Learn how to use Crawlix' },
  { name: 'Download', href: '/download', icon: Download, description: 'Get the free version' },
];

export const prerender = true;
---

<BaseLayout
  title="Page Not Found - Crawlix"
  description="The page you're looking for doesn't exist. Let us help you find what you need."
>
  <a href="#main-content" class="skip-link">Skip to main content</a>
  <Header slot="header" />

  <section class="min-h-[70vh] flex items-center justify-center py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:px-8 text-center">
      <!-- 404 Illustration -->
      <div class="relative mb-8">
        <!-- Animated background glow -->
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="h-48 w-48 rounded-full bg-sky-500/10 blur-3xl animate-pulse"></div>
        </div>

        <!-- 404 Number -->
        <div class="relative">
          <span class="text-[150px] sm:text-[200px] font-bold leading-none gradient-text-404 select-none">
            404
          </span>
        </div>
      </div>

      <!-- Error Message -->
      <h1 class="text-2xl sm:text-3xl font-bold text-white mb-4">
        Page not found
      </h1>

      <p class="text-lg text-slate-400 mb-8 max-w-md mx-auto">
        Looks like this page crawled away. Don't worryâ€”let's get you back on track.
      </p>

      <!-- Search Box -->
      <div class="max-w-md mx-auto mb-10">
        <form action="/docs" method="get" class="relative">
          <Search class="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-500" />
          <input
            type="text"
            name="q"
            placeholder="Search documentation..."
            class="w-full rounded-xl border border-slate-700 bg-[#0e2655]/80 py-3 pl-12 pr-4 text-white placeholder-slate-500 focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-500/20 transition-all"
          />
        </form>
      </div>

      <!-- Primary CTA -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
        <a
          href="/"
          class="inline-flex items-center gap-2 rounded-lg bg-sky-600 px-6 py-3 font-semibold text-white hover:bg-sky-500 transition-colors"
        >
          <Home class="h-4 w-4" />
          Back to Homepage
        </a>
        <button
          onclick="history.back()"
          class="inline-flex items-center gap-2 rounded-lg border border-slate-700 bg-slate-800/50 px-6 py-3 font-medium text-slate-300 hover:border-sky-500/50 hover:text-white transition-colors"
        >
          <ArrowLeft class="h-4 w-4" />
          Go Back
        </button>
      </div>

      <!-- Helpful Links -->
      <div class="border-t border-slate-800 pt-10">
        <h2 class="text-sm font-medium text-slate-500 uppercase tracking-wider mb-6">
          Helpful Links
        </h2>

        <div class="grid gap-4 sm:grid-cols-2">
          {helpfulLinks.map(({ name, href, icon: Icon, description }) => (
            <a
              href={href}
              class="flex items-start gap-4 rounded-xl border border-slate-800 bg-[#0e2655]/30 p-4 text-left hover:border-sky-500/50 hover:bg-[#0e2655]/50 transition-all group"
            >
              <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-sky-500/10 text-sky-400 group-hover:bg-sky-500/20 transition-colors">
                <Icon class="h-5 w-5" />
              </div>
              <div>
                <h3 class="font-medium text-white group-hover:text-sky-400 transition-colors">
                  {name}
                </h3>
                <p class="text-sm text-slate-500">{description}</p>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Contact Support -->
      <div class="mt-10 pt-8 border-t border-slate-800/50">
        <p class="text-sm text-slate-500">
          Still can't find what you're looking for?{' '}
          <a href="/contact" class="text-sky-400 hover:text-sky-300 underline underline-offset-2">
            Contact support
          </a>
        </p>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .gradient-text-404 {
    background: linear-gradient(180deg, rgba(56, 189, 248, 0.4) 0%, rgba(56, 189, 248, 0.1) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.4;
    }
    50% {
      opacity: 0.8;
    }
  }

  .animate-pulse {
    animation: pulse 3s ease-in-out infinite;
  }
</style>
