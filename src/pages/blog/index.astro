---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import {
  Calendar, Clock, ArrowRight, Tag, User, Search,
  BookOpen, Rss, ChevronRight, Mail
} from '@lucide/astro';
import {
  blogPosts,
  categories,
  getAuthor,
  getCategory,
  getCategoryColor,
  formatDate
} from '../../data/blog';

// Get featured post and regular posts
const featuredPost = blogPosts.find(p => p.featured);
const regularPosts = blogPosts.filter(p => !p.featured);

// Get current category from URL (for filtering)
const currentCategory = Astro.url.searchParams.get('category');
const filteredPosts = currentCategory
  ? regularPosts.filter(p => p.category === currentCategory)
  : regularPosts;

export const prerender = true;
---

<BaseLayout
  title="Blog - Crawlix SEO Crawler"
  description="SEO tutorials, technical guides, and product updates from the Crawlix team. Learn how to audit websites effectively."
  breadcrumbs={[
    { name: 'Home', url: '/' },
    { name: 'Blog', url: '/blog' },
  ]}
>
  <a href="#main-content" class="skip-link">Skip to main content</a>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="pt-32 pb-12 bg-gradient-to-b from-[#091a3d] to-[#0a1d42]">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl animate-on-scroll">
        <div class="inline-flex items-center gap-2 rounded-full bg-sky-500/10 border border-sky-500/30 px-4 py-1.5 text-sm text-sky-400 mb-6">
          <BookOpen class="h-4 w-4" />
          <span>Blog</span>
        </div>

        <h1 class="text-4xl font-bold text-white sm:text-5xl">
          SEO Insights & <span class="gradient-text-blue">Tutorials</span>
        </h1>

        <p class="mt-6 text-lg text-slate-400">
          Practical guides, technical deep-dives, and product updates from the Crawlix team.
          Learn how to audit websites more effectively.
        </p>

        <!-- Search Bar -->
        <div class="mt-8 max-w-md">
          <div class="relative group">
            <Search class="absolute left-4 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-500 group-focus-within:text-sky-400 transition-colors" />
            <input
              type="text"
              id="blog-search"
              placeholder="Search articles..."
              class="w-full rounded-xl border border-slate-700 bg-[#0e2655]/80 py-3 pl-12 pr-4 text-white placeholder-slate-500 focus:border-sky-500 focus:outline-none focus:ring-2 focus:ring-sky-500/20 transition-all"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Category Filter -->
  <section class="py-6 border-b border-slate-800/50 bg-[#0a1d42]/30 sticky top-16 z-40 backdrop-blur-sm">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-3 overflow-x-auto pb-2 scrollbar-hide">
        <span class="text-sm text-slate-500 shrink-0">Filter:</span>

        <a
          href="/blog"
          class={`shrink-0 rounded-full px-4 py-2 text-sm font-medium transition-colors ${
            !currentCategory
              ? 'bg-sky-500 text-white'
              : 'bg-slate-800/50 text-slate-400 hover:bg-slate-800 hover:text-white'
          }`}
        >
          All Posts
        </a>

        {categories.map((cat) => {
          const colors = getCategoryColor(cat.color);
          const isActive = currentCategory === cat.id;

          return (
            <a
              href={`/blog?category=${cat.id}`}
              class={`shrink-0 rounded-full px-4 py-2 text-sm font-medium transition-colors ${
                isActive
                  ? `${colors.bg} ${colors.text} border ${colors.border}`
                  : 'bg-slate-800/50 text-slate-400 hover:bg-slate-800 hover:text-white'
              }`}
            >
              {cat.name}
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16" id="main-content">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-3 lg:gap-12">
        <!-- Main Column -->
        <div class="lg:col-span-2">
          <!-- Featured Post -->
          {featuredPost && !currentCategory && (
            <div class="mb-12 animate-on-scroll">
              <span class="text-sm font-medium text-sky-400 uppercase tracking-wider">Featured</span>

              <a href={`/blog/${featuredPost.slug}`} class="block mt-4 group">
                <article class="rounded-2xl border border-slate-800 bg-gradient-to-br from-[#0e2655]/80 to-[#0e2655]/40 p-8 hover:border-sky-500/50 transition-all">
                  {/* Category badge */}
                  {(() => {
                    const cat = getCategory(featuredPost.category);
                    const colors = cat ? getCategoryColor(cat.color) : getCategoryColor('sky');
                    return (
                      <span class={`inline-flex items-center rounded-full ${colors.bg} ${colors.text} border ${colors.border} px-3 py-1 text-xs font-medium`}>
                        {cat?.name || featuredPost.category}
                      </span>
                    );
                  })()}

                  <h2 class="mt-4 text-2xl sm:text-3xl font-bold text-white group-hover:text-sky-400 transition-colors">
                    {featuredPost.title}
                  </h2>

                  <p class="mt-4 text-slate-400 leading-relaxed">
                    {featuredPost.excerpt}
                  </p>

                  {/* Meta */}
                  <div class="mt-6 flex flex-wrap items-center gap-4 text-sm text-slate-500">
                    {(() => {
                      const author = getAuthor(featuredPost.author);
                      return (
                        <span class="flex items-center gap-2">
                          <div class="h-8 w-8 rounded-full bg-sky-500/20 flex items-center justify-center">
                            <User class="h-4 w-4 text-sky-400" />
                          </div>
                          <span class="text-slate-300">{author?.name || 'Crawlix Team'}</span>
                        </span>
                      );
                    })()}

                    <span class="flex items-center gap-1">
                      <Calendar class="h-4 w-4" />
                      {formatDate(featuredPost.publishedAt)}
                    </span>

                    <span class="flex items-center gap-1">
                      <Clock class="h-4 w-4" />
                      {featuredPost.readingTime} min read
                    </span>
                  </div>

                  <div class="mt-6 inline-flex items-center gap-2 text-sky-400 font-medium group-hover:gap-3 transition-all">
                    Read article
                    <ArrowRight class="h-4 w-4" />
                  </div>
                </article>
              </a>
            </div>
          )}

          <!-- Post Grid -->
          <div class="space-y-8 stagger-children">
            {filteredPosts.length > 0 ? (
              filteredPosts.map((post) => {
                const cat = getCategory(post.category);
                const colors = cat ? getCategoryColor(cat.color) : getCategoryColor('sky');
                const author = getAuthor(post.author);

                return (
                  <a href={`/blog/${post.slug}`} class="block group">
                    <article class="rounded-xl border border-slate-800 bg-[#0e2655]/30 p-6 hover:border-slate-700 hover:bg-[#0e2655]/50 transition-all">
                      <div class="flex flex-col sm:flex-row sm:items-start gap-4">
                        <div class="flex-1">
                          {/* Category */}
                          <span class={`inline-flex items-center rounded-full ${colors.bg} ${colors.text} border ${colors.border} px-2.5 py-0.5 text-xs font-medium`}>
                            {cat?.name || post.category}
                          </span>

                          {/* Title */}
                          <h3 class="mt-3 text-xl font-semibold text-white group-hover:text-sky-400 transition-colors">
                            {post.title}
                          </h3>

                          {/* Excerpt */}
                          <p class="mt-2 text-slate-400 text-sm leading-relaxed line-clamp-2">
                            {post.excerpt}
                          </p>

                          {/* Meta */}
                          <div class="mt-4 flex flex-wrap items-center gap-4 text-xs text-slate-500">
                            <span class="flex items-center gap-1">
                              <User class="h-3.5 w-3.5" />
                              {author?.name || 'Crawlix Team'}
                            </span>
                            <span class="flex items-center gap-1">
                              <Calendar class="h-3.5 w-3.5" />
                              {formatDate(post.publishedAt)}
                            </span>
                            <span class="flex items-center gap-1">
                              <Clock class="h-3.5 w-3.5" />
                              {post.readingTime} min
                            </span>
                          </div>
                        </div>

                        {/* Arrow indicator */}
                        <div class="hidden sm:flex items-center justify-center h-10 w-10 rounded-lg bg-slate-800/50 text-slate-500 group-hover:bg-sky-500/20 group-hover:text-sky-400 transition-all shrink-0">
                          <ChevronRight class="h-5 w-5" />
                        </div>
                      </div>
                    </article>
                  </a>
                );
              })
            ) : (
              <div class="rounded-xl border border-slate-800 bg-[#0e2655]/30 p-12 text-center">
                <p class="text-slate-400">No posts found in this category yet.</p>
                <a href="/blog" class="mt-4 inline-flex items-center gap-2 text-sky-400 hover:text-sky-300">
                  View all posts
                  <ArrowRight class="h-4 w-4" />
                </a>
              </div>
            )}
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="mt-12 lg:mt-0">
          <div class="sticky top-32 space-y-8">
            <!-- Newsletter Signup -->
            <div class="rounded-xl border border-slate-800 bg-gradient-to-br from-sky-600/10 to-violet-600/10 p-6">
              <div class="flex items-center gap-3 mb-4">
                <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-sky-500/20 text-sky-400">
                  <Mail class="h-5 w-5" />
                </div>
                <h3 class="font-semibold text-white">Newsletter</h3>
              </div>

              <p class="text-sm text-slate-400 mb-4">
                Get SEO tips and Crawlix updates delivered to your inbox. No spam.
              </p>

              <form
                id="newsletter-form"
                class="space-y-3"
                action="javascript:void(0)"
                method="POST"
              >
                <input
                  type="email"
                  name="email"
                  id="newsletter-email"
                  placeholder="your@email.com"
                  required
                  pattern="[^\s@]+@[^\s@]+\.[^\s@]+"
                  autocomplete="email"
                  class="w-full rounded-lg border border-slate-700 bg-[#0e2655]/80 px-4 py-2.5 text-sm text-white placeholder-slate-500 focus:border-sky-500 focus:outline-none"
                />
                <button
                  type="submit"
                  id="newsletter-submit"
                  class="w-full rounded-lg bg-sky-600 px-4 py-2.5 text-sm font-medium text-white hover:bg-sky-500 transition-colors disabled:opacity-50"
                >
                  Subscribe
                </button>
                <p id="newsletter-message" class="text-xs text-center hidden"></p>
              </form>
              <script>
                // Newsletter form with client-side validation
                document.getElementById('newsletter-form')?.addEventListener('submit', async (e) => {
                  e.preventDefault();
                  const form = e.target as HTMLFormElement;
                  const emailInput = document.getElementById('newsletter-email') as HTMLInputElement;
                  const submitBtn = document.getElementById('newsletter-submit') as HTMLButtonElement;
                  const messageEl = document.getElementById('newsletter-message') as HTMLParagraphElement;

                  const email = emailInput?.value?.trim();

                  // Validate email format
                  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                  if (!email || !emailRegex.test(email)) {
                    messageEl.textContent = 'Please enter a valid email address';
                    messageEl.className = 'text-xs text-center text-red-400';
                    messageEl.classList.remove('hidden');
                    return;
                  }

                  // Show success (newsletter backend not implemented yet)
                  submitBtn.disabled = true;
                  messageEl.textContent = 'Thanks! Newsletter coming soon.';
                  messageEl.className = 'text-xs text-center text-emerald-400';
                  messageEl.classList.remove('hidden');
                  emailInput.value = '';

                  setTimeout(() => {
                    submitBtn.disabled = false;
                    messageEl.classList.add('hidden');
                  }, 3000);
                });
              </script>
            </div>

            <!-- Categories -->
            <div class="rounded-xl border border-slate-800 bg-[#0e2655]/30 p-6">
              <h3 class="font-semibold text-white mb-4">Categories</h3>

              <ul class="space-y-2">
                {categories.map((cat) => {
                  const colors = getCategoryColor(cat.color);
                  const postCount = blogPosts.filter(p => p.category === cat.id).length;

                  return (
                    <li>
                      <a
                        href={`/blog?category=${cat.id}`}
                        class="flex items-center justify-between rounded-lg px-3 py-2 text-sm text-slate-400 hover:bg-slate-800/50 hover:text-white transition-colors"
                      >
                        <span class="flex items-center gap-2">
                          <span class={`h-2 w-2 rounded-full ${colors.bg.replace('/20', '')}`}></span>
                          {cat.name}
                        </span>
                        <span class="text-xs text-slate-600">{postCount}</span>
                      </a>
                    </li>
                  );
                })}
              </ul>
            </div>

            <!-- Popular Tags -->
            <div class="rounded-xl border border-slate-800 bg-[#0e2655]/30 p-6">
              <h3 class="font-semibold text-white mb-4">Popular Tags</h3>

              <div class="flex flex-wrap gap-2">
                {Array.from(new Set(blogPosts.flatMap(p => p.tags))).slice(0, 12).map((tag) => (
                  <span class="inline-flex items-center rounded-full border border-slate-700 bg-slate-800/30 px-3 py-1 text-xs text-slate-400">
                    <Tag class="h-3 w-3 mr-1" />
                    {tag}
                  </span>
                ))}
              </div>
            </div>

            <!-- RSS Feed -->
            <a
              href="/blog/rss.xml"
              class="flex items-center gap-3 rounded-xl border border-slate-800 bg-[#0e2655]/30 p-4 text-slate-400 hover:border-sky-500/50 hover:text-sky-400 transition-colors"
            >
              <Rss class="h-5 w-5" />
              <span class="text-sm font-medium">Subscribe via RSS</span>
            </a>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-b from-transparent to-[#0a1d42]/50">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold text-white">Ready to try Crawlix?</h2>
      <p class="mt-3 text-slate-400">
        Download the free version and start auditing websites with 97+ SEO checks.
      </p>
      <a
        href="/download"
        class="mt-6 inline-flex items-center gap-2 rounded-lg bg-sky-600 px-6 py-3 font-semibold text-white hover:bg-sky-500 transition-colors"
      >
        Download Free
        <ArrowRight class="h-4 w-4" />
      </a>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .gradient-text-blue {
    background: linear-gradient(135deg, #38bdf8 0%, #818cf8 50%, #38bdf8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // Initialize scroll animations
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.animate-on-scroll, .stagger-children').forEach(el => {
      observer.observe(el);
    });

    // Simple client-side search
    const searchInput = document.getElementById('blog-search') as HTMLInputElement;
    if (searchInput) {
      searchInput.addEventListener('input', (e) => {
        const query = (e.target as HTMLInputElement).value.toLowerCase().trim();
        const articles = document.querySelectorAll('article');

        articles.forEach((article) => {
          const title = article.querySelector('h2, h3')?.textContent?.toLowerCase() || '';
          const excerpt = article.querySelector('p')?.textContent?.toLowerCase() || '';

          if (query.length < 2 || title.includes(query) || excerpt.includes(query)) {
            (article.parentElement as HTMLElement).style.display = '';
          } else {
            (article.parentElement as HTMLElement).style.display = 'none';
          }
        });
      });
    }
  });
</script>
