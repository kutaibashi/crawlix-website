---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import {
  BarChart3, Search, Gauge, FileSpreadsheet, Table, FileText, Braces,
  Globe, LayoutDashboard, Sheet, MessageSquare, Code, Plug, ArrowRight,
  CheckCircle, Clock, Zap, Download, ExternalLink, Bell, ChevronRight
} from '@lucide/astro';
import {
  integrations,
  integrationCategories,
  getFeaturedIntegrations,
  getIntegrationsByCategory,
  integrationStats
} from '../data/integrations';

// Prerender this page
export const prerender = true;

// Icon mapping
const iconMap: Record<string, any> = {
  BarChart3, Search, Gauge, FileSpreadsheet, Table, FileText, Braces,
  Globe, LayoutDashboard, Sheet, MessageSquare, Code
};

// Tier badge styles
const tierStyles = {
  free: { bg: 'bg-emerald-500/20', text: 'text-emerald-400', label: 'Free' },
  pro: { bg: 'bg-violet-500/20', text: 'text-violet-400', label: 'Pro' },
  agency: { bg: 'bg-amber-500/20', text: 'text-amber-400', label: 'Agency' },
};

const featuredIntegrations = getFeaturedIntegrations();
---

<BaseLayout
  title="Integrations - Crawlix SEO Crawler"
  description="Connect Crawlix with Google Analytics, Search Console, and PageSpeed Insights. Enrich your crawl data with real traffic and performance metrics."
>
  <a href="#main-content" class="skip-link">Skip to main content</a>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 bg-gradient-to-b from-[#091a3d] to-[#0a1d42]">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <div class="inline-flex items-center gap-2 rounded-full bg-violet-500/10 border border-violet-500/30 px-4 py-1.5 text-sm text-violet-400 mb-6">
          <Plug class="h-4 w-4" />
          <span>Integrations</span>
        </div>

        <h1 class="text-4xl font-bold text-white sm:text-5xl lg:text-6xl">
          Connect Your <span class="gradient-text-blue">SEO Stack</span>
        </h1>

        <p class="mt-6 text-lg text-slate-400 max-w-2xl mx-auto">
          Enrich crawl data with traffic metrics from Google Analytics, search performance from Search Console,
          and speed scores from PageSpeed Insights. All in one place.
        </p>

        <!-- Stats -->
        <div class="mt-10 flex flex-wrap justify-center gap-8">
          <div class="text-center">
            <div class="text-3xl font-bold text-white">{integrationStats.available}</div>
            <div class="text-sm text-slate-500">Available Now</div>
          </div>
          <div class="h-12 w-px bg-slate-800 hidden sm:block"></div>
          <div class="text-center">
            <div class="text-3xl font-bold text-violet-400">{integrationStats.comingSoon}</div>
            <div class="text-sm text-slate-500">Coming Soon</div>
          </div>
          <div class="h-12 w-px bg-slate-800 hidden sm:block"></div>
          <div class="text-center">
            <div class="text-3xl font-bold text-emerald-400">{integrationStats.freeIntegrations}</div>
            <div class="text-sm text-slate-500">Free Tier</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Integrations -->
  <section class="py-16 border-b border-slate-800/50" id="main-content">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-2xl font-bold text-white">Featured Integrations</h2>
        <p class="mt-2 text-slate-400">Connect with Google's SEO ecosystem</p>
      </div>

      <div class="grid gap-6 lg:grid-cols-3">
        {featuredIntegrations.map((integration) => {
          const Icon = iconMap[integration.logo] || Plug;
          const tier = tierStyles[integration.tier];

          return (
            <div class="relative rounded-2xl border border-violet-500/30 bg-gradient-to-br from-violet-500/5 to-transparent p-6 lg:p-8">
              {/* Featured badge */}
              <div class="absolute -top-3 left-6">
                <span class="inline-flex items-center gap-1 rounded-full bg-violet-500 px-3 py-1 text-xs font-medium text-white">
                  <Zap class="h-3 w-3" />
                  Featured
                </span>
              </div>

              {/* Header */}
              <div class="flex items-start gap-4 mt-2">
                <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-violet-500/20 text-violet-400">
                  <Icon class="h-7 w-7" />
                </div>
                <div class="flex-1">
                  <div class="flex items-center gap-2">
                    <h3 class="text-xl font-semibold text-white">{integration.name}</h3>
                    <span class={`rounded-full px-2 py-0.5 text-[10px] font-medium ${tier.bg} ${tier.text}`}>
                      {tier.label}
                    </span>
                  </div>
                  {integration.setupTime && (
                    <div class="flex items-center gap-1 mt-1 text-xs text-slate-500">
                      <Clock class="h-3 w-3" />
                      {integration.setupTime} setup
                    </div>
                  )}
                </div>
              </div>

              {/* Description */}
              <p class="mt-4 text-slate-400 text-sm leading-relaxed">
                {integration.longDescription || integration.description}
              </p>

              {/* Features */}
              <ul class="mt-6 space-y-2">
                {integration.features.slice(0, 5).map((feature) => (
                  <li class="flex items-start gap-2 text-sm text-slate-300">
                    <CheckCircle class="h-4 w-4 text-emerald-400 shrink-0 mt-0.5" />
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>

              {/* CTA */}
              <div class="mt-6 pt-6 border-t border-slate-800">
                <a
                  href={integration.docsLink || '/docs'}
                  class="inline-flex items-center gap-2 text-sm text-violet-400 hover:text-violet-300 transition-colors"
                >
                  Learn more
                  <ArrowRight class="h-4 w-4" />
                </a>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- All Integrations by Category -->
  <section class="py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-white">All Integrations</h2>
        <p class="mt-3 text-slate-400">Browse by category</p>
      </div>

      <div class="space-y-16">
        {integrationCategories.map((category) => {
          const categoryIntegrations = getIntegrationsByCategory(category.id);
          if (categoryIntegrations.length === 0) return null;

          return (
            <div id={category.id}>
              {/* Category Header */}
              <div class="flex items-center gap-4 mb-8">
                <div class="flex-1">
                  <h3 class="text-xl font-semibold text-white">{category.name}</h3>
                  <p class="text-sm text-slate-500">{category.description}</p>
                </div>
                <span class="text-sm text-slate-600">{categoryIntegrations.length} integrations</span>
              </div>

              {/* Integration Cards */}
              <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
                {categoryIntegrations.map((integration) => {
                  const Icon = iconMap[integration.logo] || Plug;
                  const tier = tierStyles[integration.tier];
                  const isComingSoon = integration.status === 'coming-soon';

                  return (
                    <div class={`rounded-xl border ${isComingSoon ? 'border-slate-800 bg-slate-800/20' : 'border-slate-800 bg-[#0e2655]/30'} p-5 hover:border-slate-700 transition-all ${isComingSoon ? 'opacity-75' : ''}`}>
                      {/* Header */}
                      <div class="flex items-start gap-3">
                        <div class={`flex h-10 w-10 items-center justify-center rounded-lg ${isComingSoon ? 'bg-slate-800 text-slate-500' : 'bg-sky-500/10 text-sky-400'}`}>
                          <Icon class="h-5 w-5" />
                        </div>
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center gap-2">
                            <h4 class="font-medium text-white truncate">{integration.name}</h4>
                          </div>
                          <div class="flex items-center gap-2 mt-1">
                            <span class={`rounded-full px-1.5 py-0.5 text-[10px] font-medium ${tier.bg} ${tier.text}`}>
                              {tier.label}
                            </span>
                            {isComingSoon && (
                              <span class="rounded-full bg-slate-700 px-1.5 py-0.5 text-[10px] font-medium text-slate-400">
                                Soon
                              </span>
                            )}
                          </div>
                        </div>
                      </div>

                      {/* Description */}
                      <p class="mt-3 text-sm text-slate-400 line-clamp-2">
                        {integration.description}
                      </p>

                      {/* Features preview */}
                      {!isComingSoon && integration.features.length > 0 && (
                        <div class="mt-3 flex flex-wrap gap-1">
                          {integration.features.slice(0, 2).map((feature) => (
                            <span class="text-[10px] text-slate-500 bg-slate-800/50 rounded px-1.5 py-0.5 truncate max-w-full">
                              {feature.split(',')[0]}
                            </span>
                          ))}
                        </div>
                      )}

                      {/* Action */}
                      <div class="mt-4">
                        {isComingSoon ? (
                          <button class="w-full flex items-center justify-center gap-2 rounded-lg border border-slate-700 bg-slate-800/50 px-3 py-2 text-xs text-slate-400 hover:border-sky-500/50 hover:text-white transition-colors">
                            <Bell class="h-3 w-3" />
                            Notify Me
                          </button>
                        ) : integration.docsLink ? (
                          <a
                            href={integration.docsLink}
                            class="w-full flex items-center justify-center gap-2 rounded-lg border border-slate-700 bg-slate-800/50 px-3 py-2 text-xs text-slate-300 hover:border-sky-500/50 hover:text-white transition-colors"
                          >
                            View Docs
                            <ChevronRight class="h-3 w-3" />
                          </a>
                        ) : (
                          <span class="block text-center text-xs text-slate-500 py-2">
                            Included
                          </span>
                        )}
                      </div>
                    </div>
                  );
                })}
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-16 bg-[#0a1d42]/30">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-2xl font-bold text-white">How Integrations Work</h2>
        <p class="mt-2 text-slate-400">Connect in minutes, enrich your crawl data automatically</p>
      </div>

      <div class="grid gap-8 md:grid-cols-3">
        <div class="text-center">
          <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-sky-500/20 text-sky-400 mx-auto mb-4">
            <span class="text-xl font-bold">1</span>
          </div>
          <h3 class="font-semibold text-white mb-2">Connect via OAuth</h3>
          <p class="text-sm text-slate-400">
            Securely authorize Crawlix to access your Google accounts. No passwords stored.
          </p>
        </div>

        <div class="text-center">
          <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-sky-500/20 text-sky-400 mx-auto mb-4">
            <span class="text-xl font-bold">2</span>
          </div>
          <h3 class="font-semibold text-white mb-2">Sync Your Data</h3>
          <p class="text-sm text-slate-400">
            Crawlix pulls the last 30 days of data and matches it to your crawled pages.
          </p>
        </div>

        <div class="text-center">
          <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-sky-500/20 text-sky-400 mx-auto mb-4">
            <span class="text-xl font-bold">3</span>
          </div>
          <h3 class="font-semibold text-white mb-2">Get Insights</h3>
          <p class="text-sm text-slate-400">
            See traffic data alongside SEO issues. Find orphan pages with traffic but no links.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div class="rounded-2xl border border-sky-500/30 bg-gradient-to-br from-sky-600/10 to-violet-600/10 p-8 md:p-12 text-center">
        <h2 class="text-2xl font-bold text-white">
          Ready to connect your SEO stack?
        </h2>
        <p class="mt-4 text-slate-400">
          Google integrations are available on Pro and Agency tiers. Free tier includes CSV and JSON export.
        </p>
        <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href="/download"
            class="inline-flex items-center gap-2 rounded-lg bg-sky-600 px-6 py-3 font-semibold text-white hover:bg-sky-500 transition-colors"
          >
            Download Crawlix
            <Download class="h-4 w-4" />
          </a>
          <a
            href="/pricing"
            class="inline-flex items-center gap-2 text-slate-400 hover:text-white transition-colors"
          >
            View pricing
            <ArrowRight class="h-4 w-4" />
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .gradient-text-blue {
    background: linear-gradient(135deg, #38bdf8 0%, #818cf8 50%, #38bdf8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // Initialize scroll animations
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.animate-on-scroll, .stagger-children, .scale-in').forEach(el => {
      observer.observe(el);
    });
  });
</script>
