---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import { ArrowRight, Download, Check, Bug, Lightbulb, BarChart3, Link, ChevronRight } from '@lucide/astro';
import { allComparisons, competitors } from '../../data/comparisons';

// Icon mapping for competitors
const iconMap: Record<string, any> = {
  Bug,
  Lightbulb,
  BarChart3,
  Link,
};

export const prerender = true;
---

<BaseLayout
  title="Compare Crawlix - SEO Crawler Alternatives"
  description="Compare Crawlix with Screaming Frog, Sitebulb, Semrush, and Ahrefs. Find the best SEO crawler for your needs."
>
  <a href="#main-content" class="skip-link">Skip to main content</a>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="pt-32 pb-16 bg-gradient-to-b from-[#091a3d] to-[#0a1d42]">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto animate-on-scroll">
        <div class="inline-flex items-center gap-2 rounded-full bg-sky-500/10 border border-sky-500/30 px-4 py-1.5 text-sm text-sky-400 mb-6">
          <span>Compare</span>
        </div>

        <h1 class="text-4xl font-bold text-white sm:text-5xl lg:text-6xl">
          How Does Crawlix <span class="gradient-text-blue">Compare</span>?
        </h1>

        <p class="mt-6 text-lg text-slate-400 max-w-2xl mx-auto">
          Honest, detailed comparisons with the leading SEO crawlers. See where Crawlix excels
          and where competitors might be a better fit for your needs.
        </p>

        <!-- Quick summary -->
        <div class="mt-10 grid gap-4 sm:grid-cols-3 max-w-2xl mx-auto">
          <div class="rounded-xl border border-emerald-500/30 bg-emerald-500/10 p-4 text-center">
            <p class="text-2xl font-bold text-emerald-400">90%</p>
            <p class="text-sm text-slate-400">Cheaper than cloud tools</p>
          </div>
          <div class="rounded-xl border border-sky-500/30 bg-sky-500/10 p-4 text-center">
            <p class="text-2xl font-bold text-sky-400">100%</p>
            <p class="text-sm text-slate-400">Local data privacy</p>
          </div>
          <div class="rounded-xl border border-violet-500/30 bg-violet-500/10 p-4 text-center">
            <p class="text-2xl font-bold text-violet-400">134+</p>
            <p class="text-sm text-slate-400">SEO checks included</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Comparison Cards -->
  <section class="py-20" id="main-content">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-white">Choose a Comparison</h2>
        <p class="mt-3 text-slate-400">Detailed feature and pricing breakdowns</p>
      </div>

      <div class="grid gap-8 md:grid-cols-2">
        {allComparisons.map((comparison) => {
          const Icon = iconMap[comparison.competitor.logo] || Bug;
          const savings = comparison.competitor.id === 'screaming-frog'
            ? 'Save $110/year'
            : comparison.competitor.id === 'sitebulb'
            ? 'Save $271/year'
            : comparison.competitor.id === 'semrush'
            ? 'Save $1,251/year'
            : 'Save $1,399/year';

          return (
            <a
              href={`/compare/${comparison.competitor.id}`}
              class="group rounded-2xl border border-slate-800 bg-[#0e2655]/30 p-8 hover:border-sky-500/50 hover:bg-[#0e2655]/50 transition-all"
            >
              <div class="flex items-start justify-between mb-6">
                <div class="flex items-center gap-4">
                  <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-slate-800 text-slate-400">
                    <Icon class="h-7 w-7" />
                  </div>
                  <div>
                    <h3 class="text-xl font-bold text-white group-hover:text-sky-400 transition-colors">
                      Crawlix vs {comparison.competitor.name}
                    </h3>
                    <p class="text-sm text-slate-500">{comparison.competitor.tagline}</p>
                  </div>
                </div>
                <ChevronRight class="h-5 w-5 text-slate-600 group-hover:text-sky-400 group-hover:translate-x-1 transition-all" />
              </div>

              <p class="text-slate-400 mb-6">{comparison.subheadline}</p>

              <!-- Key differences -->
              <div class="space-y-3 mb-6">
                {comparison.summaryPoints.slice(0, 3).map((point) => (
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-slate-500">{point.title}</span>
                    <div class="flex items-center gap-3">
                      <span class={point.winner === 'crawlix' ? 'text-emerald-400 font-medium' : 'text-slate-400'}>
                        {point.crawlix}
                      </span>
                      <span class="text-slate-600">vs</span>
                      <span class={point.winner === 'competitor' ? 'text-white' : 'text-slate-500'}>
                        {point.competitor}
                      </span>
                    </div>
                  </div>
                ))}
              </div>

              <!-- Bottom row -->
              <div class="flex items-center justify-between pt-6 border-t border-slate-800">
                <span class="inline-flex items-center gap-1 text-emerald-400 text-sm font-medium">
                  <Check class="h-4 w-4" />
                  {savings}
                </span>
                <span class="text-sm text-sky-400 group-hover:underline">
                  View full comparison
                </span>
              </div>
            </a>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Why Compare -->
  <section class="py-20 bg-[#0a1d42]/30">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-2xl font-bold text-white">Why Our Comparisons Are Different</h2>
        <p class="mt-3 text-slate-400">We believe in honest, transparent comparisons</p>
      </div>

      <div class="grid gap-6 md:grid-cols-3">
        <div class="rounded-xl border border-slate-800 bg-[#0e2655]/30 p-6 text-center">
          <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-sky-500/20 text-sky-400 mx-auto mb-4">
            <Check class="h-6 w-6" />
          </div>
          <h3 class="font-semibold text-white mb-2">Real Data</h3>
          <p class="text-sm text-slate-400">
            All pricing and feature information is verified from official sources.
          </p>
        </div>

        <div class="rounded-xl border border-slate-800 bg-[#0e2655]/30 p-6 text-center">
          <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-sky-500/20 text-sky-400 mx-auto mb-4">
            <Check class="h-6 w-6" />
          </div>
          <h3 class="font-semibold text-white mb-2">Honest About Weaknesses</h3>
          <p class="text-sm text-slate-400">
            We acknowledge where competitors excel. No tool is perfect for everyone.
          </p>
        </div>

        <div class="rounded-xl border border-slate-800 bg-[#0e2655]/30 p-6 text-center">
          <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-sky-500/20 text-sky-400 mx-auto mb-4">
            <Check class="h-6 w-6" />
          </div>
          <h3 class="font-semibold text-white mb-2">Use Case Focused</h3>
          <p class="text-sm text-slate-400">
            We help you decide based on your specific needs, not just features.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Comparison Table -->
  <section class="py-20">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-2xl font-bold text-white">Quick Comparison</h2>
        <p class="mt-3 text-slate-400">At-a-glance differences</p>
      </div>

      <div class="overflow-x-auto rounded-2xl border border-slate-800 bg-[#0e2655]/30">
        <table class="w-full">
          <thead>
            <tr class="border-b border-slate-800 bg-[#0a1628]">
              <th class="py-5 px-6 text-left text-sm font-semibold text-white">Tool</th>
              <th class="py-5 px-6 text-center text-sm font-semibold text-slate-400">Starting Price</th>
              <th class="py-5 px-6 text-center text-sm font-semibold text-slate-400">Data Location</th>
              <th class="py-5 px-6 text-center text-sm font-semibold text-slate-400">Free Tier</th>
              <th class="py-5 px-6 text-center text-sm font-semibold text-slate-400">Platform</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-b border-slate-800 bg-sky-500/5">
              <td class="py-4 px-6">
                <div class="flex items-center gap-3">
                  <span class="text-xl">üï∑Ô∏è</span>
                  <span class="font-medium text-sky-400">Crawlix</span>
                </div>
              </td>
              <td class="py-4 px-6 text-center text-emerald-400 font-medium">$0 (free tier)</td>
              <td class="py-4 px-6 text-center text-emerald-400">100% Local</td>
              <td class="py-4 px-6 text-center"><Check class="h-5 w-5 mx-auto text-emerald-500" /></td>
              <td class="py-4 px-6 text-center text-slate-300">Win/Mac/Linux</td>
            </tr>
            <tr class="border-b border-slate-800/50">
              <td class="py-4 px-6">
                <div class="flex items-center gap-3">
                  <Bug class="h-5 w-5 text-slate-500" />
                  <span class="text-slate-300">Screaming Frog</span>
                </div>
              </td>
              <td class="py-4 px-6 text-center text-slate-400">$259/year</td>
              <td class="py-4 px-6 text-center text-slate-400">Local</td>
              <td class="py-4 px-6 text-center text-slate-500">500 URLs only</td>
              <td class="py-4 px-6 text-center text-slate-400">Win/Mac/Linux</td>
            </tr>
            <tr class="border-b border-slate-800/50">
              <td class="py-4 px-6">
                <div class="flex items-center gap-3">
                  <Lightbulb class="h-5 w-5 text-slate-500" />
                  <span class="text-slate-300">Sitebulb</span>
                </div>
              </td>
              <td class="py-4 px-6 text-center text-slate-400">$162/year</td>
              <td class="py-4 px-6 text-center text-slate-400">Local/Cloud</td>
              <td class="py-4 px-6 text-center text-slate-500">Trial only</td>
              <td class="py-4 px-6 text-center text-slate-400">Windows only*</td>
            </tr>
            <tr class="border-b border-slate-800/50">
              <td class="py-4 px-6">
                <div class="flex items-center gap-3">
                  <BarChart3 class="h-5 w-5 text-slate-500" />
                  <span class="text-slate-300">Semrush</span>
                </div>
              </td>
              <td class="py-4 px-6 text-center text-slate-400">$1,400/year</td>
              <td class="py-4 px-6 text-center text-slate-400">Cloud</td>
              <td class="py-4 px-6 text-center text-slate-500">7-day trial</td>
              <td class="py-4 px-6 text-center text-slate-400">Web only</td>
            </tr>
            <tr>
              <td class="py-4 px-6">
                <div class="flex items-center gap-3">
                  <Link class="h-5 w-5 text-slate-500" />
                  <span class="text-slate-300">Ahrefs</span>
                </div>
              </td>
              <td class="py-4 px-6 text-center text-slate-400">$348/year</td>
              <td class="py-4 px-6 text-center text-slate-400">Cloud</td>
              <td class="py-4 px-6 text-center text-slate-500">Limited</td>
              <td class="py-4 px-6 text-center text-slate-400">Web only</td>
            </tr>
          </tbody>
        </table>
      </div>
      <p class="mt-4 text-sm text-slate-500 text-center">* Desktop version is Windows-only; Cloud version works on all platforms</p>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div class="rounded-2xl border border-sky-500/30 bg-gradient-to-br from-sky-600/10 to-violet-600/10 p-8 md:p-12 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white">
          Try Crawlix for Free
        </h2>
        <p class="mt-4 text-slate-400 max-w-xl mx-auto">
          The best way to compare is to try it yourself. Download Crawlix and run your first crawl in minutes.
        </p>
        <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href="/download"
            class="inline-flex items-center gap-2 rounded-lg bg-sky-600 px-6 py-3 font-semibold text-white hover:bg-sky-500 transition-colors"
          >
            <Download class="h-5 w-5" />
            Download Free
          </a>
          <a
            href="/features"
            class="inline-flex items-center gap-2 text-slate-400 hover:text-white transition-colors"
          >
            View all features
            <ArrowRight class="h-4 w-4" />
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .gradient-text-blue {
    background: linear-gradient(135deg, #38bdf8 0%, #818cf8 50%, #38bdf8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.animate-on-scroll').forEach(el => {
      observer.observe(el);
    });
  });
</script>
