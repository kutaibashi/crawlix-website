---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';

interface Props {
  title: string;
  lastUpdated: string;
  description?: string;
}

const { title, lastUpdated, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <a href="#main-content" class="skip-link">Skip to main content</a>

  <Header slot="header" />

  <article class="pt-32 pb-20">
    <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
      <header class="mb-12 border-b border-slate-800 pb-8">
        <h1 class="text-3xl font-bold text-white sm:text-4xl">{title}</h1>
        <p class="mt-4 text-sm text-slate-400">
          Last updated: <time datetime={lastUpdated}>{lastUpdated}</time>
        </p>
      </header>

      <div class="prose prose-invert prose-slate max-w-none prose-headings:font-semibold prose-headings:text-white prose-a:text-sky-400 prose-a:no-underline hover:prose-a:underline prose-strong:text-white">
        <slot />
      </div>
    </div>
  </article>

  <Footer slot="footer" />
</BaseLayout>
